# =============================================================================
# Cloudflare Monitor - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit your .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED: Cloudflare API Credentials
# -----------------------------------------------------------------------------
# Your Cloudflare API token with Pages read permissions
# Get it from: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Account > Cloudflare Pages > Read
CLOUDFLARE_API_TOKEN=your_token_here

# Your Cloudflare Account ID
# Found in: Cloudflare Dashboard URL (dash.cloudflare.com/<ACCOUNT_ID>/)
# Or: Workers & Pages > Overview > Account ID (right sidebar)
CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# -----------------------------------------------------------------------------
# OPTIONAL: Server Configuration
# -----------------------------------------------------------------------------
# API server port (default: 3001)
API_PORT=3001

# API server host (default: 0.0.0.0 for container compatibility)
API_HOST=0.0.0.0

# Environment mode (development | production | test)
NODE_ENV=development

# -----------------------------------------------------------------------------
# OPTIONAL: Polling & Performance
# -----------------------------------------------------------------------------
# How often to poll Cloudflare API (milliseconds, default: 10000 = 10s)
# Lower values = more API calls, fresher data
# Higher values = fewer API calls, less fresh data
# Recommended: 10000-30000ms
POLL_INTERVAL_MS=10000

# Cache time-to-live (milliseconds, default: 10000 = 10s)
# Should be <= POLL_INTERVAL_MS
CACHE_TTL_MS=10000

# -----------------------------------------------------------------------------
# OPTIONAL: Database
# -----------------------------------------------------------------------------
# SQLite database file path (default: ./data/monitor.db)
DATABASE_PATH=./data/monitor.db

# -----------------------------------------------------------------------------
# OPTIONAL: Dashboard Display
# -----------------------------------------------------------------------------
# How many days to show failed deployments on the dashboard (default: 7)
# Older failures are kept in the database but hidden from the main view
# Set higher to see more history, lower to reduce noise
FAILURE_RETENTION_DAYS=7

# -----------------------------------------------------------------------------
# OPTIONAL: CORS & Security
# -----------------------------------------------------------------------------
# Allowed origin for CORS (default: http://localhost:5173)
# Set to your frontend URL in production
CORS_ORIGIN=http://localhost:5173

# -----------------------------------------------------------------------------
# OPTIONAL: Logging
# -----------------------------------------------------------------------------
# Log level (debug | info | warn | error, default: info)
LOG_LEVEL=info
