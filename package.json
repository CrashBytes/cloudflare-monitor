{
  "name": "cloudflare-monitor",
  "version": "1.0.0",
  "private": true,
  "description": "Real-time monitoring platform for Cloudflare deployments",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:api\" \"bun run dev:web\"",
    "dev:api": "cd apps/api && bun run --watch src/index.ts",
    "dev:web": "bun run --cwd apps/web dev",
    "build": "bun run build:shared && bun run build:sdk && bun run build:api && bun run build:web",
    "build:shared": "bun run --cwd packages/shared build",
    "build:sdk": "bun run --cwd packages/cloudflare-sdk build",
    "build:api": "bun run --cwd apps/api build",
    "build:web": "bun run --cwd apps/web build",
    "start": "bun run --cwd apps/api start",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "echo 'Typecheck handled by build step'",
    "setup": "chmod +x ./install.sh && ./install.sh",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/dist packages/*/dist data/*.db",
    "version:patch": "npm version patch && git push --follow-tags",
    "version:minor": "npm version minor && git push --follow-tags",
    "version:major": "npm version major && git push --follow-tags"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "keywords": [
    "cloudflare",
    "monitoring",
    "real-time",
    "sse",
    "deployment",
    "pages",
    "workers"
  ],
  "author": "CrashBytes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CrashBytes/cloudflare-monitor.git"
  },
  "bugs": {
    "url": "https://github.com/CrashBytes/cloudflare-monitor/issues"
  },
  "homepage": "https://github.com/CrashBytes/cloudflare-monitor#readme",
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
