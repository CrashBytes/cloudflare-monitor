{
  "name": "@cloudflare-monitor/cloudflare-sdk",
  "version": "1.0.0",
  "private": true,
  "description": "Type-safe Cloudflare API client with retry logic",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
